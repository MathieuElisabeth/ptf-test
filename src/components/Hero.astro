<section class="hero-section" id="home">
  <div class="hero-content">
    <p class="greet">Mathieu Elisabeth</p>
    <h1 class="heading1">
      <span class="sr-only">Développeur Frontend</span>
      <span aria-hidden="true">Developpeur</span>
    </h1>
    <h1 class="heading1" aria-hidden="true">frontend</h1>
  </div>
  <div class="scroll-down" id="scroll-down">
    <a href="#about" aria-label="Faire défiler vers la section À propos">
      <svg
        width="32px"
        height="32px"
        class="scroll-mouse"
        viewBox="0 0 247 390"
        version="1.1"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        aria-hidden="true"
      >
        <path
          class="wheel"
          d="M123.359,79.775l0,72.843"
          style="fill:none;stroke:var(--white);stroke-width:20px;"
        ></path>
        <path
          id="mouse"
          d="M236.717,123.359c0,-62.565 -50.794,-113.359 -113.358,-113.359c-62.565,0 -113.359,50.794 -113.359,113.359l0,143.237c0,62.565 50.794,113.359 113.359,113.359c62.564,0 113.358,-50.794 113.358,-113.359l0,-143.237Z"
          style="fill:none;stroke:var(--white);stroke-width:20px;"
        ></path>
      </svg>
    </a>
  </div>
</section>

<style lang="scss">
  .hero-section {
    position: relative;
    height: 100dvh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-family: var(--font-sans);
    box-sizing: border-box;
    pointer-events: none;

    a {
      z-index: 5;
      pointer-events: auto;
    }
  }

  .hero-content {
    text-align: center;
  }

  .heading1 {
    color: var(--white);
    font-size: 120px;
    margin: 0;
    font-weight: bold;
    line-height: 102px;
    text-transform: uppercase;

    @media (max-width: 1024px) {
      font-size: 80px;
      line-height: 80px;
    }

    @media (max-width: 580px) {
      font-size: 40px;
      line-height: 40px;
    }
  }

  .greet {
    font-family: var(--font-mono);
    font-size: var(--fz-xl);
    color: #939393;
    margin: 10px 0;
    margin-left: 7px;

    @media (max-width: 580px) {
      font-size: var(--fz-sm);
    }
  }

  .scroll-down {
    position: absolute;
    bottom: 100px;
    margin-top: 60px;
    text-align: center;
    z-index: 5;

    a {
      display: inline-block;
      transition: transform 0.3s ease;

      &:hover {
        transform: translateY(-5px);
      }
    }

    .wheel {
      animation: scroll-down 2s ease infinite;
    }
  }

  @keyframes scroll-down {
    0% {
      transform: translateY(0);
    }
    30% {
      transform: translateY(3.75rem);
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const scrollDown = document.getElementById('scroll-down');
    
    if (scrollDown) {
      gsap.to(scrollDown, {
        opacity: 0,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: '.hero-section',
          start: 'top top+=5%',
          end: 'top+=50%',
          scrub: 1,
        },
      });
    }
  });
</script>