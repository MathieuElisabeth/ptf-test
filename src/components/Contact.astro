<style lang="scss">
  .contact-section {
    background-color: #ffff;
    margin: auto;
    overflow: hidden;
    padding: 0;
    z-index: 1;
  }

  .contact-wrapper {
    position: relative;
    min-height: 100vh;
  }

  .contact-canvas-container {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    background-color: var(--bg-color);
  }

  .contact-mask {
    mix-blend-mode: lighten;
    height: 100vh;
    width: 100%;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;

    .contact-h2 {
      font-size: 250px;
      text-transform: uppercase;
      color: #000;

      @media (max-width: 1024px) {
        font-size: 140px;
      }

      @media (max-width: 600px) {
        font-size: 70px;
      }
    }
  }

  .contact-info {
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: absolute;
    opacity: 0;

    & > a {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      font-size: 40px;
      pointer-events: auto;
      color: var(--white);
      transition: all 0.3s ease;

      &:hover {
        transform: translateY(-10px);
        color: var(--green);
      }

      & > p {
        margin: 10px 0 0 0;
      }

      & > svg {
        margin: 0;
        padding: 0;
        width: 60px;
        height: 60px;
        fill: currentColor;
      }

      @media (max-width: 600px) {
        font-size: 20px;

        & > svg {
          width: 40px;
          height: 40px;
        }
      }
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const wrapper = document.querySelector('.contact-wrapper');
    const heading = document.querySelector('.contact-h2');
    const contactInfo = document.querySelector('.contact-info');
    
    if (wrapper && heading && contactInfo) {
      // Pin the section
      ScrollTrigger.create({
        trigger: wrapper,
        start: 'top top',
        end: '+=150%',
        pin: true,
        id: 'contact-section',
      });

      // Scale heading
      gsap.to(heading, {
        scale: window.innerWidth <= 600 ? 800 : 100,
        scrollTrigger: {
          trigger: heading,
          scrub: 1,
          start: 'top+=80% top',
          end: '+=80%',
          id: 'contact-heading',
        },
      });

      // Fade in contact info
      gsap.to(contactInfo, {
        opacity: 1,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: heading,
          start: 'top+=100% top',
          end: '+=150%',
          scrub: 1,
          id: 'contact-info',
        },
      });
    }
  });
</script>