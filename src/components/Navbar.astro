<style lang="scss">
  .navbar {
    position: absolute;
    width: 100%;
    height: 70px;
    z-index: 5;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .nav-left {
    padding-left: 50px;

    a {
      color: var(--white);
      font-size: var(--fz-xxl);
      font-weight: bold;
      font-family: var(--font-sans);

      svg {
        height: 40px;
        fill: var(--white);
        transition: fill 0.3s ease;
