        fill: var(--green);
      }
    }

    @media (max-width: 480px) {
      padding-left: 20px;
    }
  }

  .nav-right {
    display: flex;
    align-items: center;
    padding-right: 50px;

    @media (max-width: 480px) {
      padding-right: 20px;
    }
  }

  .nav-resume-btn {
    outline: none;
    font-size: 16px;
    background: transparent;
    border: none;
    color: var(--white);
    border-radius: 5px;
    padding: 10px 15px;
    cursor: pointer;
    transition: background-color 0.3s ease;

    &:hover {
      background: rgba(255, 255, 255, 0.1);
    }
  }
